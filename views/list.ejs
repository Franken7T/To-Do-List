<%- include("header") -%>

<body>
  <div id="app">
    <h3><em>Shots</em></h3>
  </div>

  <div class="top" id="clock">
    <h2><%=localTime%></h2>
  </div>

  <div class="box" id="heading">
    <h1> <%= workList%> </h1>

  </div>


  <div class="box">

    <% listItems.forEach(function(item){%>
    <form action="/del"  method="POST" >
      <div class="item">

        <input type="checkbox" onChange="this.form.submit()" value="<%=item._id%>" name="deletedItem" >

        <p><%= item.name %></p>
      </div>
      <input type="hidden" name="delList" value="<%=workList%>"></input>
    </form>
    <% })%>
    
    <form class="item" action="/" method="POST">

      <input type="text" name="NextItem" placeholder="New Item" autocomplete="off">

      <button type="submit" name="list" value="<%= workList %>">+</button>

    </form>
  </div>

  <%- include("footer") -%>